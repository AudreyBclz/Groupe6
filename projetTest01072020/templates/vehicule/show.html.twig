{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque.nomMarque }}</td>
            </tr>
            <tr>
                <th>NomVehicule</th>
                <td>{{ vehicule.nomVehicule }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ vehicule.typeVehicule.nomTypeVehicule }}</td>
            </tr>
            <tr>
                <th>Energie</th>
                <td>{{ vehicule.energy.nomEnergy }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ vehicule.color.nomColor}}</td>
            </tr>
            <tr>
                <th>Option</th>
                <td>{{ vehicule.options.nomOption }}</td>
            </tr>
            <tr>
                <th>NumImmat</th>
                <td>{{ vehicule.numImmat }}</td>
            </tr>
            <tr>
                <th>PrixHt</th>
                <td>{{ vehicule.prixHt }}</td>
            </tr>
            <tr>
                <th>NbPorte</th>
                <td>{{ vehicule.nbPorte }}</td>
            </tr>


        </tbody>
    </table>

    <div class="row">
    <a href="{{ path('vehicule_index') }}">
        <button class="btn btn-outline-dark">Retour</button>
    </a>

    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">
        <button class="btn btn-outline-dark">Edition</button>
    </a>

    {{ include('admin/vehicule/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>NameProduct</th>
                <td>{{ product.nameProduct }}</td>
            </tr>
            <tr>
                <th>DescrProduct</th>
                <td>{{ product.descrProduct }}</td>
            </tr>
            <tr>
                <th>PriceProduct</th>
                <td>{{ product.priceProduct }}</td>
            </tr>
            <tr>
                <th>DateCreaProduct</th>
                <td>{{ product.dateCreaProduct ? product.dateCreaProduct|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateModifProduct</th>
                <td>{{ product.dateModifProduct ? product.dateModifProduct|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StatusProduct</th>
                <td>{{ product.statusProduct ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PhotoProduct</th>
                <td>{{ product.photoProduct }}</td>
            </tr>
            <tr>
                <th>StockProduct</th>
                <td>{{ product.stockProduct }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}

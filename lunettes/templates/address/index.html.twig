{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstAddress</th>
                <th>SecondAddress</th>
                <th>ZipcodeAddress</th>
                <th>TownAddress</th>
                <th>CountryAddress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.firstAddress }}</td>
                <td>{{ address.secondAddress }}</td>
                <td>{{ address.zipcodeAddress }}</td>
                <td>{{ address.townAddress }}</td>
                <td>{{ address.countryAddress }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}
